@page
@model FamilyPromiseApp.Pages.Cases.EditModel

@{
    ViewData["Title"] = "Edit";
    var selCase = Model.selectedCase;
    }

<h1>Edit</h1>

<h4>Case</h4>
<hr />
<div class="row">
    @{<p>Case ID: @selCase.ID</p>
    <p>Client ID: @selCase.TakenBy</p>
    <p>Date: @selCase.Date</p>
    <p>Time: @selCase.Time</p>
    <p>Referring Agency: @selCase.ReferringAgency</p>
    <p>Current Situation: @selCase.CurrentSituation</p>
    <p>Is Housed: @selCase.IsHoused</p>
    <p>Is Employed: @selCase.IsEmployed</p>

    }

    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Case.ID" />
            <div class="form-group">
                <label asp-for="Case.ID" class="control-label"></label>
                <input asp-for="Case.ID" class="form-control" />
                <span asp-validation-for="Case.ID" class="text-danger"></span>
            </div>
               <div class="form-group">
                <label asp-for="Case.TakenBy" class="control-label"></label>
                <input asp-for="Case.TakenBy" value="@selCase.TakenBy" class="form-control" />
                <span asp-validation-for="Case.TakenBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.Date" class="control-label"></label>
                <input asp-for="Case.Date" value="@selCase.Date" class="form-control" />
                <span asp-validation-for="Case.Date" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.Time" class="control-label"></label>
                <input asp-for="Case.Time" value="@selCase.Time"class="form-control" />
                <span asp-validation-for="Case.Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.ReferringAgency" class="control-label"></label>
                <input asp-for="Case.ReferringAgency" value="@selCase.ReferringAgency" class="form-control" />
                <span asp-validation-for="Case.ReferringAgency" class="text-danger"></span>
            </div>
 
             <div class="form-group">
                <label asp-for="Case.CurrentSituation" class="control-label"></label>
                <input asp-for="Case.CurrentSituation" value="@selCase.CurrentSituation"  class="form-control" />
                <span asp-validation-for="Case.CurrentSituation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.IsHoused" class="control-label"></label>
                <input asp-for="Case.IsHoused" value="@selCase.IsHoused" class="form-control" />
                <span asp-validation-for="Case.IsHoused" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.IsEmployed" class="control-label"></label>
                <input asp-for="Case.IsEmployed" value="@selCase.IsEmployed" class="form-control" />
                <span asp-validation-for="Case.IsEmployed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Case.income" class="control-label"></label>
                <input asp-for="Case.income" value="@selCase.income" class="form-control" />
                <span asp-validation-for="Case.income" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.TransportMethod" class="control-label"></label>
                <input asp-for="Case.TransportMethod" value="@selCase.TransportMethod" class="form-control" />
                <span asp-validation-for="Case.TransportMethod" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.Substance" class="control-label"></label>
                <input asp-for="Case.Substance" value="@selCase.Substance" class="form-control" />
                <span asp-validation-for="Case.Substance" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.HealthChallenge" class="control-label"></label>
                <input asp-for="Case.HealthChallenge" value="@selCase.HealthChallenge" class="form-control" />
                <span asp-validation-for="Case.HealthChallenge" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Case.DomesticViolenceHistory" class="control-label"></label>
                <input asp-for="Case.DomesticViolenceHistory" value="@selCase.DomesticViolenceHistory" class="form-control" />
                <span asp-validation-for="Case.DomesticViolenceHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
