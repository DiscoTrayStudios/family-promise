@page
@model FamilyPromiseApp.Pages.Referrals.IndexModel

@{
    ViewData["Title"] = "Referrals";
}

<h2>Referrals</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form asp-page="./Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Referrals[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referrals[0].ReferralName)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.CategorySort">
                    @Html.DisplayNameFor(model => model.Referrals[0].Category)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.StatusSort">
                    @Html.DisplayNameFor(model => model.Referrals[0].Status)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referrals[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referrals[0].ContactInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Referrals[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Referrals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DropDownListFor(modelItem => item.Status,
                                          new SelectList(Enum.GetValues(typeof(Models.Status))),
                                          "Select Status",
                                          new { @class = "form-control" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
