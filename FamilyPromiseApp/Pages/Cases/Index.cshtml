@page
@model FamilyPromiseApp.Pages.Cases.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Client Information</h1>

@* <p>
    <a asp-page="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].FirstMidName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].CellPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].WorkPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewCase[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NewCase) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CellPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WorkPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
